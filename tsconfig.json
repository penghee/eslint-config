{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.lib.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "outDir": "dist",
    "types": [ "node" ],
    "baseUrl": "./",
    "declaration": true,
  },
  "exclude": [ "node_modules" ],
  "include": [
    "src/**/*.ts",
    "bin/*.ts"
  ]
}